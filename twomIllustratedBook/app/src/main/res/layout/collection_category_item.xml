<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="activityContext"
            type="android.content.Context" />

        <variable
            name="category"
            type="com.jinproject.twomillustratedbook.domain.model.Category" />
    </data>

    <androidx.cardview.widget.CardView
        android:id="@+id/collectionCategoryItem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        app:cardCornerRadius="5dp"
        app:cardElevation="5dp"
        app:cardUseCompatPadding="true">

        <ImageView
            android:id="@+id/collectionCategoryImg"
            android:layout_width="390dp"
            android:layout_height="132dp"
            android:layout_marginBottom="25dp"
            app:srcCompat="@drawable/weapon"
            context="@{activityContext}"
            imgName="@{category.storedName}"/>

        <TextView
            android:id="@+id/collectionCategoryName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center"
            android:text="@{category.displayName}"
            android:textSize="20sp" />
    </androidx.cardview.widget.CardView>
</layout>